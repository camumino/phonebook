<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :surname, "Apellidos" %>
    <%= f.text_field :surname, :class => 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :email, "Email" %>
    <%= f.text_field :email, :class => 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :contact_type, "Tipo de contacto" %>
    <%= f.select :contact_type,  Contact::CONTACT_TYPES.collect.with_index {|index, type| [ index, type ]}, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :avatar, "Avatar" %>
    <%= f.file_field :avatar, :class => 'form-control' %>
  </div>

  <%= f.submit 'Guardar', :class => 'btn btn-default' %>
<% end %>
